<!doctype html>
<html lang="en">
<body>
<h1>Dein Rezeptemanager</h1>
<a href="/">Zurück</a>
<div class="container">
  <div>
    <form action="/unit/create" method="post">
      <div class="form-group">
        <label for="name">Name:</label><input type="text" class="form-control" id="name" name="name"/><br>
      </div>
      <button type="submit" class="btn btn-primary">Speichern</button>
    </form>
  </div>
  <div>
    {{#units}}
      <li>{{name}} <a href="/unit/delete?name={{name}}">Löschen</a></li>
    {{/units}}
  </div>
</div>
</body>
</html>
